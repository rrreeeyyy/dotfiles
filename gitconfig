[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[color]
  diff = auto
  status = auto
  branch = auto
  grep = auto
[alias]
  st = status
  co = checkout
  ci = commit -v
  di = diff
  br = branch
  puhs = push
  psuh = push
  pus = push
  puh = push
  pl = !git pull && git submodule update --init
  lg = log --graph --all --decorate --abbrev-commit --branches --date=short --show-signature
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
